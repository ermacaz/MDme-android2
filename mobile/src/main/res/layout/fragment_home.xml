<!--gray header-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/MDme_lightgray"
    android:orientation="horizontal"
    android:layout_gravity="center_vertical"
    android:padding="28dp">
    <ImageView
        android:id="@+id/profile_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/missing"
        android:layout_gravity="center_vertical"
        android:layout_weight=".3"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="16dp"
        android:contentDescription="@string/desc_avatar"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="start"
        android:layout_weight=".6">
        <TextView
            android:id="@+id/profile_full_name"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/MDme_primary"
            android:textSize="8pt"
            />
        <TextView
            android:id="@+id/profile_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/MDme_primary"
            android:textSize="6pt"/>
        <TextView
            android:id="@+id/profile_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/MDme_primary"
            android:textSize="6pt"/>
        <TextView
            android:id="@+id/profile_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/MDme_primary"
            android:textSize="6pt"/>
    </LinearLayout>
</LinearLayout>
